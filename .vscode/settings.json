{
  "workbench.sideBar.location": "right",
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[php]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "editor.fontSize": 11,
  "editor.lineHeight": 22,
  "editor.rulers": [80, 120],
  "workbench.colorTheme": "New England",
  "editor.fontFamily": "'Cartograph CF','JetBrains Mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.fontLigatures": true,
  "workbench.iconTheme": "vscode-icons",
  "bracket-pair-colorizer-2.forceUniqueOpeningColor": true,
  "bracket-pair-colorizer-2.forceIterationColorCycle": true,
  "bracket-pair-colorizer-2.colors": ["Orange", "Magenta", "Blue"],
  "editor.cursorStyle": "block",
  "editor.cursorBlinking": "solid",
  "files.associations": {
    "*.tpl": "html"
  },
  "emmet.includeLanguages": {
    "smarty": "html"
  },
  "html.format.wrapLineLength": 80,
  "editor.quickSuggestions": { "comments": true },
  "indentRainbow.colors": [
    "rgba(255,255,64,0.2)",
    "rgba(127,255,127,0.2)",
    "rgba(255,127,255,0.2)",
    "rgba(79,236,236,0.2)"
  ],
  "terminal.integrated.fontSize": 12
}
